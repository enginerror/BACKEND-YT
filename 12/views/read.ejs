<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
      <div class="mb-10">
        <a class="text-blue-500" href="/">Back to Home</a>
      </div>

      <h1 class="text-2xl tracking-tighter mb-4">All Users</h1>

      <div class="users flex gap-4 flex-wrap">
        <% if(users.length > 0) {%> <% users.forEach(function(user) { %>
        <div class="user w-72 p-2 bg-zinc-800 rounded-sm">
          <div class="w-full h-72 rounded-sm bg-zinc-700 overflow-hidden">
            <img
              class="w-full h-full object-cover"
              src="<%= user.image %>"
              alt=""
            />
          </div>
          <div class="p-2">
            <h3 class="text-[18px] tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-500 text-[14px]"><%= user.email %></h5>
            <div class="flex gap-2 mt-3 text-[14px]">
              <a class="bg-zinc-300 rounded-sm px-3 py-2 text-zinc-900" href="/edit/<%= user._id%>"
                >Edit</a
              >
              <a
                class="bg-red-500 rounded-sm px-3 py-2 text-gray-300"
                href="/delete/<%= user._id %>"
                >Delete</a
              >
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <h3 class="text-zinc-500">No User Founded</h3>
        <%}%>
      </div>
    </div>
  </body>
</html>
